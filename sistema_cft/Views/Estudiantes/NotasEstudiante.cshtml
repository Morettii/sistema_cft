@model IEnumerable<sistema_cft.Models.Nota>

@{
    ViewData["Title"] = "Notas del Estudiante";
}

<h1>Notas del Estudiante</h1>

<p> <a href="http://localhost:5068/Notas/Create" class="btn btn-warning">Notas</a></></p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EstudianteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AsignaturaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ponderacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EstudianteId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AsignaturaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ponderacion)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Actualizar</a> |
                    <a class="btn btn-light" asp-action="Details" asp-route-id="@item.Id">Ver</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>